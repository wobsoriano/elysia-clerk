{
  "name": "elysia-clerk",
  "version": "0.8.0",
  "description": "Unofficial Clerk plugin for Elysia.",
  "author": "Robert Soriano <sorianorobertc@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/wobsoriano/elysia-clerk#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/elysia-clerk.git"
  },
  "bugs": "https://github.com/wobsoriano/elysia-clerk/issues",
  "keywords": [
    "bun",
    "auth"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --preload ./setup.ts --watch ./dev/index.tsx",
    "build": "tsup src/index.ts --env.NODE_ENV production",
    "prepublishOnly": "bun run build",
    "release": "changeset publish",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format src --write",
    "test": "bun test --preload ./setup.ts",
    "test:watch": "bun test --watch"
  },
  "peerDependencies": {
    "elysia": "^1.0.0"
  },
  "dependencies": {
    "@clerk/backend": "^1.13.9",
    "@clerk/shared": "^2.9.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.7",
    "@elysiajs/eden": "^1.1.2",
    "@elysiajs/html": "^1.1.0",
    "@types/bun": "^1.1.6",
    "elysia": "^1.1.7",
    "tsup": "^8.2.4",
    "typescript": "5.5.4"
  }
}
